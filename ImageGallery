        /* Resetting some default styles for better aesthetics */
        body {
            margin: 0;
            font-family: 'Arial', sans-serif;
        }

        /* Styling the Image Gallery */
        .gallery {
            display: grid; /* Use grid layout for flexibility */
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr)); /* Responsive columns */
            gap: 16px; /* Set gap between images */
            padding: 16px; /* Add padding for a clean look */
        }

        /* Style for gallery images */
        .gallery img {
            width: 100%; /* Ensure images fill the container */
            height: auto; /* Maintain aspect ratio */
            border-radius: 8px; /* Add a subtle border-radius for aesthetics */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Add a subtle box shadow for depth */
            transition: transform 0.2s ease-in-out; /* Add a smooth transition effect on hover */
        }

        /* Change scale on hover for images */
        .gallery img:hover {
            transform: scale(1.1); /* Scale the image slightly on hover */
        }
    </style>
</head>
